<%= form_with model:@customer, url: customers_path, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %>
  <%= f.label :phone_num %>
  <%= f.telephone_field :phone_num %>（ハイフンなし）
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :allergy %>
  <%= f.text_field :allergy %>
  <%= f.label :note %>
  <%= f.text_area :note %>
  <%= f.label :age %>
  <%= f.text_field :age %>歳
  <%= f.submit "登録" %>
<% end %>
