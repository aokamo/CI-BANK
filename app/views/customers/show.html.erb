    <tr>
      <th>顧客ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>名前</th>
      <td><%= @customer.name %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.phone_num %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>年齢</th>
      <td><%= @customer.age %></td>
    </tr>
    <tr>
      <th>アレルギー</th>
      <td><%= @customer.allergy %></td>
    </tr>
    <tr>
      <th>備考</th>
      <td><%= @customer.note %></td>
    </tr>
    <tr>
      <th>ドリンク平均金額</th>
      <td><%#= @customer_avg_drink %>円</td>
