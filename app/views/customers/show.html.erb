  <table class = "visit_history">
    <tr>
      <th>時間</th>
      <th>人数</th>
    </tr>
  <% @books.each do |b| %>
    <tr>
      <td><%= b.start_at %></td>
      <th><%= b.people %></th>
    </tr>
  <% end %>
  </table>
